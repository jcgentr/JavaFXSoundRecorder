    <Button fx:id="recordButton" id="recordBtn" text="Record" GridPane.rowIndex="0" GridPane.columnIndex="0"
            onAction="#onButtonClicked"/>
    <Label fx:id="timeLabel" id="timeLbl" text="Record Time: 00:00:00" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button fx:id="playButton" id="playBtn" text="Play" GridPane.rowIndex="0" GridPane.columnIndex="2"
            onAction="#onButtonClicked"/>
